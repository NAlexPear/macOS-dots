# enter fullscreen ctrle for the focused container
ctrl - f : chunkc tiling::window --toggle fullscreen

# kill focused window
shift + ctrl - q : chunkc tiling::window --close

# change focus
ctrl - h : chunkc tiling::window --focus west
ctrl - j : chunkc tiling::window --focus south
ctrl - k : chunkc tiling::window --focus north
ctrl - l : chunkc tiling::window --focus east

# change monitor focus with desktop
# ctrl - 1 : chunkc tiling::monitor -f $(chunkc tiling::query --monitor-for-desktop 1)
# ctrl - 2 : chunkc tiling::monitor -f $(chunkc tiling::query --monitor-for-desktop 2)
# ctrl - 3 : chunkc tiling::monitor -f $(chunkc tiling::query --monitor-for-desktop 3)
# ctrl - 4 : chunkc tiling::monitor -f $(chunkc tiling::query --monitor-for-desktop 4)
# ctrl - 5 : chunkc tiling::monitor -f $(chunkc tiling::query --monitor-for-desktop 5)
# ctrl - 6 : chunkc tiling::monitor -f $(chunkc tiling::query --monitor-for-desktop 6)

# move focused window
shift + ctrl - h : chunkc tiling::window --warp west
shift + ctrl - j : chunkc tiling::window --warp south
shift + ctrl - k : chunkc tiling::window --warp north
shift + ctrl - l : chunkc tiling::window --warp east

ctrl - r : chunkc tiling::desktop --rotate 90

# move focused container to workspace
shift + ctrl - m : chunkc tiling::window --send-to-desktop $(chunkc get _last_active_desktop)
shift + ctrl - p : chunkc tiling::window --send-to-desktop prev
shift + ctrl - n : chunkc tiling::window --send-to-desktop next
shift + ctrl - 1 : chunkc tiling::window --send-to-desktop 1
shift + ctrl - 2 : chunkc tiling::window --send-to-desktop 2
shift + ctrl - 3 : chunkc tiling::window --send-to-desktop 3
shift + ctrl - 4 : chunkc tiling::window --send-to-desktop 4
shift + ctrl - 5 : chunkc tiling::window --send-to-desktop 5
shift + ctrl - 6 : chunkc tiling::window --send-to-desktop 6
